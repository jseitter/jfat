<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- 
        This file contains suppression rules for the OWASP Dependency Check tool.
        Use this to suppress false positives or vulnerabilities that are not applicable
        to your specific use case.
        
        Example suppression:
        <suppress>
            <notes><![CDATA[
                CVE-XXXX-XXXX is not applicable because we don't use the vulnerable component.
            ]]></notes>
            <packageUrl regex="true">^pkg:maven/com\.example/.*@.*$</packageUrl>
            <cve>CVE-XXXX-XXXX</cve>
        </suppress>
    -->
    
    <!-- Suppress CVEs that are not applicable to library usage -->
    <suppress>
        <notes><![CDATA[
            Guava vulnerabilities related to server-side usage are not applicable 
            to this library's use case as a filesystem library.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/com\.google\.guava/guava@.*$</packageUrl>
        <vulnerabilityName regex="true">.*denial.of.service.*</vulnerabilityName>
    </suppress>
    
    <!-- Suppress test-only dependencies -->
    <suppress>
        <notes><![CDATA[
            JUnit and Mockito vulnerabilities are not applicable in production
            as they are test-only dependencies.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.junit\.jupiter/.*@.*$</packageUrl>
    </suppress>
    
    <suppress>
        <notes><![CDATA[
            Mockito vulnerabilities are not applicable in production
            as it is a test-only dependency.
        ]]></notes>
        <packageUrl regex="true">^pkg:maven/org\.mockito/.*@.*$</packageUrl>
    </suppress>
</suppressions> 